#NOVA CLIENT API
from novaclient.v1_1 import client
havana_user = "admin"
havana_pass = "625a7fb62b5543d2"
havana_tenant = "admin"
havana_auth_url = "http://192.168.10.204:5000/v2.0/"
havana = client.Client(havana_user, havana_pass, havana_tenant, havana_auth_url, service_type="compute")

havana_aggregates = havana.aggregates.list()
havana_availability_zones = havana.availability_zones.list()
havana_flavors = havana.flavors.list()
havana_floating_ip_pools = havana.floating_ip_pools.list()
havana_floating_ips = havana.floating_ips.list()
havana_images = havana.images.list()
havana_keypairs = havana.keypairs.list()
havana_networks = havana.networks.list()
havana_security_groups = havana.security_groups.list()
havana_servers = havana.servers.list()

##Throws Exception
##havana_security_groups_rules = havana.security_groups_rules.list()

